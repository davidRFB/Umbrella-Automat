&FORCE_EVAL
  METHOD QMMM

  &DFT
   CHARGE -1
    &QS
      METHOD PM6
      &SE
        ANALYTICAL_GRADIENTS T
      &END SE
    &END QS
    &SCF
      SCF_GUESS ATOMIC
    &END SCF

  &END DFT

  &MM
    &FORCEFIELD
      &SPLINE
       EMAX_SPLINE 10.0
       RCUT_NB 10.
      &END
      parm_file_name ../topoledit
      parmtype AMBER
      VDW_SCALE14 0.5
      EI_SCALE14  0.8333333
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .24
        GMAX 146  95  131
        RCUT 10.
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM

  &QMMM
    USE_GEEP_LIB 10
    &CELL
      ABC 21. 21. 21.
      PERIODIC NONE
    &END CELL
    &INTERPOLATOR
      EPS_R 1.0e-14
      EPS_X 1.0e-14
      MAXITER 200
    &END INTERPOLATOR


    &QM_KIND C
  MM_INDEX   3852 
  MM_INDEX   3850
