&FORCE_EVAL
  METHOD QMMM

  &DFT
   CHARGE -1
   BASIS_SET_FILE_NAME ../BASIS_MOLOPT
   POTENTIAL_FILE_NAME ../GTH_POTENTIALS
!   RESTART_FILE_NAME toedit_byresolution
    &MGRID
